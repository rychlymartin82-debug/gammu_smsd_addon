{
  "name": "Gammu SMS Gateway",
  "version": "2.0.1",
  "slug": "gammu_sms_gateway",
  "description": "SMS Gateway using Gammu SMSD with MQTT support",
  "url": "https://github.com/rychlymartin82-debug/gammu_smsd_addon",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "devices": ["/dev/ttyUSB2:/dev/ttyUSB2:rwm"],
  "auto_uart": false,
  "homeassistant_api": false,
  "hassio_api": true,
  "hassio_role": "default",
  "auth_api": false,
  "ingress": false,
  "panel_icon": "mdi:message-text-outline",
  "options": {
    "device": "/dev/ttyUSB2",
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "smsd",
    "mqtt_password": "",
    "mqtt_topic": "Ourplace/SMS/Outgoing"
  },
  "schema": {
    "device": "str",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "password",
    "mqtt_topic": "str"
  }
}
